<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/accent">
        <shape android:shape="oval">
            <solid android:color="@color/accent" />
        </shape>
    </item>
    <item android:drawable="@color/accent_pressed" android:state_focused="false" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/accent_pressed" />
        </shape>
    </item>
    <item android:drawable="@color/accent_pressed" android:state_focused="true" android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/accent_pressed" />
        </shape>
    </item>
    <item android:drawable="@color/accent" android:state_focused="true" android:state_pressed="false" />
</selector>