<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/white">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:drawable="@color/divider" android:state_focused="false" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/divider" />
        </shape>
    </item>
    <item android:drawable="@color/divider" android:state_focused="true" android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/divider" />
        </shape>
    </item>
    <item android:drawable="@color/white" android:state_focused="true" android:state_pressed="false" />
</selector>